<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.pd_pro_biblioteka_client.controller.AdminAddbook"
      alignment="TOP_CENTER" style="-fx-background-color: #726C6C; -fx-padding: 20;" prefHeight="600.0" prefWidth="600.0">

    <Region prefHeight="20"/>

    <Label text="Dodaj książkę:" style="-fx-font-size: 32px; -fx-text-fill: #FFFFFF"/>

    <Region prefHeight="20"/>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label text="Tytuł"  style="-fx-font-size: 16px; -fx-text-fill: #F5F5F5"/>
        <TextField fx:id="a_title" prefWidth="600" style="-fx-font-size: 16px;"/>
    </VBox>

    <Region prefHeight="20"/>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label text="Gatunek"  style="-fx-font-size: 16px; -fx-text-fill: #F5F5F5"/>
        <TextField fx:id="a_genre" prefWidth="600" style="-fx-font-size: 16px;"/>
    </VBox>

    <Region prefHeight="20"/>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label text="Data wydania"  style="-fx-font-size: 16px; -fx-text-fill: #F5F5F5"/>
        <DatePicker fx:id="a_relaseDate" prefWidth="600" style="-fx-font-size: 16px;"/>
    </VBox>

    <Region prefHeight="20"/>


    <HBox spacing="50">
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="Imię autora"  style="-fx-font-size: 16px; -fx-text-fill: #F5F5F5"/>
            <TextField fx:id="au_name" prefWidth="300" style="-fx-font-size: 16px;"/>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="Nazwisko autora"  style="-fx-font-size: 16px; -fx-text-fill: #F5F5F5"/>
            <TextField fx:id="au_surname" prefWidth="300" style="-fx-font-size: 16px;"/>
        </VBox>
    </HBox>

    <Region prefHeight="20"/>

    <Button fx:id="add_button" text="Dodaj" onAction="#add_act"
            style="-fx-font-size: 14px; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-padding: 10px 20px; -fx-arc-width: 20px; -fx-background-color: #2C2C2C; -fx-text-fill: #F5F5F5"/>

</VBox>
